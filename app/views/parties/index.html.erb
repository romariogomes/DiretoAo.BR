<div class="container">

  <h1>Partidos</h1><br />

  <table id="parties-table" class="table table-hover table-responsible">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Ideologia pol√≠tica</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @parties.each do |party| %>
        <tr>
          <td><%= party.name %></td>
          <td><%= party.orientation %></td>
          <td><%= link_to 'Visualizar', party %></td>
          <td><%= link_to 'Editar dados', edit_party_path(party)%></td>
          <td>
            <%= button_to party, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' }  do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to '+ Novo partido', new_party_path, class: 'btn btn-primary', method: :get %>
</div>
