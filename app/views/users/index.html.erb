<p id="notice"><%= notice %></p>

<div class="container">

  <h2>Controle de usuários</h2><br>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Visualizar', user %></td>
          <td><%= link_to 'Editar dados', edit_user_path(user)%></td>
          <td>
            <%= button_to user, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' }  do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to '+ Novo usuário', new_user_path, class: 'btn btn-primary', method: :get %>
</div>
